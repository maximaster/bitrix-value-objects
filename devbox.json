{
  "packages": [
    "php@7.4",
    "php74Packages.composer@latest"
  ],
  "shell": {
    "init_hook": [
      "export PATH=vendor/bin:$PATH"
    ],
    "scripts": {
      "lint": "php-cs-fixer fix --dry-run --allow-risky=yes --diff --verbose && psalm.phar",
      "fix": "php-cs-fixer fix --allow-risky=yes --diff --verbose"
    }
  }
}
